<?xml version="1.0" encoding="UTF-8" ?>

<Defs>
    <GeneDef>
        <defName>Moka_Blind</defName>
        <label>blind</label>
        <description>Carriers of this gene are totally blind, due to degredation of the occipital lobe. Their eyes still see, but their mind cannot.</description>
        <iconPath>UI/GeneIcons/BlindIcon</iconPath>
        <displayCategory>Miscellaneous</displayCategory>
        <displayOrderInCategory>56</displayOrderInCategory>
        <biostatMet>4</biostatMet>
        <customEffectDescriptions>
            <li MayRequire="Ludeon.RimWorld.Ideology">Satisfies blindness precept.</li>
        </customEffectDescriptions>
        <exclusionTags>
            <!--<li>ShootingAccuracy</li>-->
            <li>Turn_Exclusion_NightVision</li>
            <li>Turn_Exclusion_NearSighted</li>
        </exclusionTags>
        <capMods>
            <li>
                <capacity>Sight</capacity>
                <postFactor>-1</postFactor>
            </li>
        </capMods>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>dark</symbol></li>
                <li><symbol>lost</symbol></li>
                <li><symbol>gloom</symbol></li>
                <li>
                    <symbol>blind</symbol>
                    <weight>1.5</weight>
                </li>
            </prefixSymbols>
        </symbolPack>
    </GeneDef>
	
	<GeneDef>
        <defName>Moka_Mute</defName>
        <label>mute</label>
        <description>Carriers of this gene are mentally incapable of forming words in the context of verbal communication.</description>
        <iconPath>UI/GeneIcons/MuteIcon</iconPath>
        <displayCategory>Miscellaneous</displayCategory>
        <displayOrderInCategory>119</displayOrderInCategory>
        <biostatMet>2</biostatMet>
        <exclusionTags>
            <li>Voice</li>
            <li>Turn_Exclusion_Speechless</li>
        </exclusionTags>
        <capMods>
            <li>
                <capacity>Talking</capacity>
                <postFactor>-1</postFactor>
            </li>
        </capMods>
        <symbolPack>
            <prefixSymbols>
                <li><symbol>hush</symbol></li>
                <li><symbol>quiet</symbol></li>
            </prefixSymbols>
            <suffixSymbols>
                <li><symbol>mute</symbol></li>
            </suffixSymbols>
        </symbolPack>
    </GeneDef>
	
</Defs>